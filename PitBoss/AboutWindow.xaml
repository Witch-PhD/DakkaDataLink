<Window x:Class="PitBoss.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PitBoss"
        mc:Ignorable="d"
        Title="AboutWindow" Height="450" Width="800">
    <StackPanel Margin="5,5,5,5">
        <TextBlock FontSize="32" Text="The Pit Boss" HorizontalAlignment="Center"/>
        <TextBlock Text="A Foxhole artillery coordination tool, 2024. Written by [82DK-A] Witch,PhD"/>
        <TextBox Width="220" HorizontalAlignment="Left" IsReadOnly="True">
            https://github.com/Witch-PhD/PitBoss
        </TextBox>

        <StackPanel Orientation="Horizontal">
            <TextBlock FontSize="24" Text="Version: "/>
            <TextBlock x:Name="Version_TextBlock" FontSize="24" Text="x.x.x"/>
        </StackPanel>
    </StackPanel>
</Window>
