<Window x:Class="PitBoss.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PitBoss"
        xmlns:userControls="clr-namespace:PitBoss.UserControls"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <TabControl >
        <TabItem x:Name="Spotter_TabItem" Header="Spotter">
            <userControls:Spotter_UserControl x:Name="theSpotterUserControl"/>
        </TabItem>
        <TabItem x:Name="Gunner_TabControl" Header="Gunner">
            <userControls:GunBattery_UserControl x:Name="theGunnerUserControl"/>
        </TabItem>
    </TabControl>
</Window>
